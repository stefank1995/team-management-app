@{
    Layout = "/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h1 class="mt-4">Settings</h1>
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Configure your settings</h5>
                    <hr />
                    <!-- Move the partial view inside the same row -->
                    <partial name="_SettingsNav.cshtml" />
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <!-- RenderBody content -->
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
