@using Microsoft.AspNetCore.Identity;
@using TeamManagementApp.ViewModels;
@using TeamManagementApp.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Configure Roles";
    Layout = "~/Views/Settings/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible" style="margin-top: 20px">
        @ViewBag.Message
    </div>
}

<div class="d-flex justify-content-between align-items-center">
    <h4>Role List</h4>
    
    <a asp-action="Create" class="btn btn-secondary">Create a Role</a>
</div>
<hr />

@if (Model.Count() == 0)
{
    <caption>No Records Found</caption>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Role Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Assign</a>
                                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
