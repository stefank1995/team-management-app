@{
    ViewData["Title"] = "App Settings";
}
<h4>App Settings</h4>
<hr />
<div class="container">
    <div class="form-group">
        <label for="nightModeSwitch">Night Mode</label>
        <div class="form-check form-switch">
            <input type="checkbox" class="form-check-input" id="nightModeSwitch">
            <label class="form-check-label" for="nightModeSwitch">Enable Night Mode</label>
        </div>
    </div>
    <div class="form-group">
        <label for="swimlaneToggle">Swimlanes</label>
        <div class="form-check form-switch">
            <input type="checkbox" class="form-check-input" id="swimlaneToggle">
            <label class="form-check-label" for="swimlaneToggle">Show Swimlanes</label>
        </div>
    </div>
</div>

<style>

    body.night-mode {
        background-color: #333;
        color: #fff;
    }
</style>

<!-- Add Bootstrap and custom JavaScript -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"></script>

<script>
    // JavaScript to toggle night mode
    const nightModeSwitch = document.getElementById("nightModeSwitch");
    const body = document.body;

    nightModeSwitch.addEventListener("change", function () {
        if (this.checked) {
            body.classList.add("night-mode");
        } else {
            body.classList.remove("night-mode");
        }
    });
</script>


